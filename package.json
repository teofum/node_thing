{
  "name": "node_thing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint",
    "prepare": "husky",
    "update-types": "pnpx supabase gen types typescript --project-id prxzhaldskupuefqkomv > src/lib/supabase/database.types.ts",
    "electron:build": "tsup",
    "electron:package": "electron-builder --dir",
    "electron:fix": "rm -rf node_modules && pnpm i --force",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch"
  },
  "main": "build/main.js",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "build": {
    "asar": true,
    "executableName": "node-thing",
    "appId": "com.nodething.node-thing",
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@lemonsqueezy/lemonsqueezy.js": "^4.0.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.0",
    "@types/wicg-file-system-access": "^2023.10.6",
    "@xyflow/react": "^12.8.4",
    "camelcase-keys": "^10.0.0",
    "classnames": "^2.5.1",
    "get-port-please": "^3.2.0",
    "jszip": "^3.10.1",
    "mediabunny": "^1.23.0",
    "mercadopago": "^2.9.0",
    "nanoid": "^5.1.6",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-aria-components": "^1.12.2",
    "react-dom": "19.1.0",
    "react-easy-crop": "^5.5.3",
    "react-icons": "^5.5.0",
    "wgsl_reflect": "^1.2.3",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@glen/jest-raw-loader": "^2.0.0",
    "@next/eslint-plugin-next": "^15.5.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@webgpu/types": "^0.1.64",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "raw-loader": "^4.0.2",
    "supabase": "^2.40.7",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5"
  }
}
